# DB
POSTGRES_HOST=db
POSTGRES_DB=sidetrack
POSTGRES_USER=sidetrack
POSTGRES_PASSWORD=sidetrack
POSTGRES_PORT=5432
# Legacy Phase 1 defaults (kept for reference only)
# POSTGRES_DB=vibescope
# POSTGRES_USER=vibe
# POSTGRES_PASSWORD=vibe

# Optional override: set a full PostgreSQL URL for local dev
# DATABASE_URL=postgresql+psycopg://user:password@db:5432/sidetrack
# AUTO_MIGRATE=1  # Enable Phase 2 auto-migrations; set to 0 to manage manually

# Discord bot credentials (thread + message IDs stored in new schema)
DISCORD_TOKEN=discord_bot_token_here
DISCORD_GUILD_ID=discord_guild_id_here
DISCORD_CLIENT_ID=discord_application_id

# ListenBrainz / MusicBrainz
# Per-user credentials are managed via the API/UI
# LISTENBRAINZ_USER=
# LISTENBRAINZ_TOKEN=
MUSICBRAINZ_RATE_LIMIT=1.0

# Last.fm
LASTFM_API_KEY=lfm_xxx
LASTFM_API_SECRET=lfm_secret

# Recommendations feature flags
SPOTIFY_RECS_ENABLED=true
LASTFM_SIMILAR_ENABLED=true
# LB_CF_ENABLED=false

# Auth.js (NextAuth) â€“ Google OAuth
NEXTAUTH_URL=https://sidetrack.network
NEXTAUTH_SECRET=supersecretlongrandom
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# UI
NEXT_PUBLIC_API_BASE=http://localhost:8000 # production: https://sidetrack.network/api

# Paths
AUDIO_ROOT=/audio
CACHE_DIR=/tmp/vibescope
EXCERPT_SECONDS=0

# Models
EMBEDDING_MODEL=openl3,musicnn,clap,panns
USE_CLAP=true
USE_DEMUCS=false
TORCH_DEVICE=auto

# Scheduler
INGEST_LISTENS_INTERVAL_MINUTES=1
LASTFM_SYNC_INTERVAL_MINUTES=30
AGGREGATE_WEEKS_INTERVAL_MINUTES=1440
WEEKLY_INSIGHTS_INTERVAL_MINUTES=1440
TZ=America/New_York
